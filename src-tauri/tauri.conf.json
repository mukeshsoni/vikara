{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Vikara",
  "version": "0.1.0",
  "identifier": "com.vikara.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "beforeBundleCommand": "node scripts/update_libs.js",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Vikara",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["*/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
